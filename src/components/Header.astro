---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { getCollection } from "astro:content";

const games = await getCollection("games");
const hardewares = await getCollection("hardwares");
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/mega-drive/">Games ({games.length})</HeaderLink>
		<HeaderLink href="/mega-drive/hardwares">Hardware ({hardewares.length})</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
